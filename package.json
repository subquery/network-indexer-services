  "files": [
    "/dist",
    "/bin"
  ],
  "bin": {
    "subql-coordinator": "./bin/run"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build && sh ./scripts/copy-resources.sh",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "yarn build && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "echo get test back soon...",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "start:cli": "node ./dist/main.js",
    "start:help": "yarn start:prod --help",
    "start:testnet": "yarn start:prod --network testnet --ws-endpoint 'https://sqtn.api.onfinality.io/public' --postgres-host localhost --postgres-database postgres --postgres-port 5432 --port 8000",
    "build:docker-compose": "docker-compose -f ./dev/docker-compose.yml build --no-cache",
    "start:docker-compose": "docker-compose -f ./dev/docker-compose.yml up"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/graphql": "^9.1.1",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/typeorm": "^8.0.2",
    "@subql/common": "^0.13.0",
    "@subql/contract-sdk": "0.4.1",
    "@subql/indexer-admin": "0.1.1-1",
    "apollo-server-core": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "class-validator": "^0.13.2",
    "ethereumjs-util": "^7.1.3",
    "ethers": "^5.5.1",
    "graphql": "15.7.2",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tools": "^8.2.0",
    "handlebars": "^4.7.7",
    "lodash": "^4.17.21",
    "node-fetch": "2.6.1",
    "pg": "^8.7.1",
    "pino": "^7.3.0",
